@using HoundRace.Web.ViewModels
@model RaceEventViewModel

<div class="panel panel-default">
    <div class="panel-heading">
        @Model.Name Race
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-md-2 text-center">Race#: @Model.EventNumber</div>
            <div class="col-md-2 text-center">Distance: @Model.Distance</div>
            <div class="col-md-4 text-center">Start: @Model.EventTime</div>
            <div class="col-md-4 text-center">Finish: @Model.FinishTime</div>
        </div>

        <br />
        <div class="row">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Dog Name</th>
                        <th>Odds</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var entry in Model.Entries)
                    {
                        <tr>
                            <td>@entry.Name</td>
                            <td>@entry.OddsDecimal</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
